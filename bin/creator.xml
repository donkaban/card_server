<?xml version="1.0"?>
<TheEngine>
    <system
        width="1024"
        height="646"
        fullscreen="false"
        log="error"
        filtering="2"
        showFps="false"
        dataPath="./data/" />
     <scene name="mainScene">
        <camera name="camera" FOV="33" zNear="0.1" zFar="100">
            <position x="0"  y="0" z="0" />
        </camera>
        <light>
            <position x="0"  y="5"  z="5" />
            <ambient  x="1"  y="1"  z="1"  w="1" />
            <diffuse  x="1"  y="1"  z="1"  w="1" />
            <specular x=".1" y=".1" z=".1" w="1" />
        </light>
      <cubemap all="textures/reflection_map.png"/>     
    </scene>
    
    <textures namespace="card">
        <texture name="silver"  file="/textures/silver.png"/>
        <texture name="gold"    file="/textures/gold.png"/>
        <texture name="chip"    file="/textures/CardChip.png"/>
        <texture name="chip_n"  file="/textures/CardChip_bump.png"/>
        <texture name="chip_s"  file="/textures/CardChip_spec.png"/>
        <texture name="holo"    file="/textures/MasterCardHologram.png"/>
        <texture name="holo_h"  file="/textures/MasterCardHologramHeight.png"/>
        <texture name="holo_n"  file="/textures/MasterCardHologramNormal.png"/>
        <texture name="metal_n" file="/textures/FrontNormal.png"/>
        <texture name="metal_s" file="/textures/FrontSpec.png"/>
    </textures>    

    <cubemaps namespace="card">
      <cubemap name="holocube" all="textures/HologramCube.png"/>     
    </cubemaps>    

    <materials namespace="card">
        <material
            name="chip"
            vertex="shaders/chip.vsh"
            fragment="shaders/chip.fsh"
            texture0="card::chip"
            texture1="card::chip_n"
            texture2="card::chip_s"/>
        <material
            name="chrome"
            vertex="shaders/chrome.vsh"
            fragment="shaders/chrome.fsh"/>
        <material
            name="metalic"
            vertex="shaders/metalic.vsh"
            fragment="shaders/metalic.fsh"
            texture1="card::metal_s"
            texture2="card::metal_n"/>
        <material
            name="holo"
            vertex="shaders/hologram.vsh"
            fragment="shaders/hologram.fsh"
            texture0="card::holo" 
            texture1="card::holo_n" 
            texture2="card::holo_h"
            cubemap="card::holocube"
            />
    </materials>

</TheEngine>